---
import docIcon from "../assets/icons/doc-fill.svg?raw";
import githubIcon from "../assets/icons/github-fill.svg?raw";
import profileIcon from "../assets/icons/me-fill.svg?raw";
import logo from "../assets/logo.svg?raw";
import AppearenceToggle from "../components/appearence-toggle.astro";
import PauseAnimationsButton from "../components/pause-animations-button.astro";
import ThemeSelector from "../components/theme-selector.astro";
import { urls } from "../constants";
import "../global.css";

type Props = {
	frontmatter?: Record<string, unknown>;
	headerOnly?: boolean;
	noMargin?: boolean;
	title?: string;
};

const {
	frontmatter,
	headerOnly = false,
	noMargin = false,
	title,
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title || frontmatter?.title}</title>
		<link
			id="global-theme-root"
			href="/themes/autumn-light.css"
			rel="stylesheet"
		/></head
	>

	<body>
		<div class="flex justify-center margin-16 skip-to-main">
			<a href="#main"> Skip to content </a>
		</div>
		<header class="header">
			<div class="align-center row justify-between">
				<a href="/">
					<Fragment class="logo" set:html={logo} />
				</a>
				<nav>
					<ul class="gap-8 justify-center row">
						<li>
							<a
								aria-label="about me"
								href="/about-me"
								title="About me"
								><Fragment set:html={profileIcon} /></a
							>
						</li>
						<li>
							<a aria-label="resume" href="/resume" title="Resume"
								><Fragment set:html={docIcon} /></a
							>
						</li>
						<li>
							<a
								aria-label="Github"
								href={urls.github}
								rel="noopener noreferrer"
								target="_blank"
								title="Github"
							>
								<Fragment set:html={githubIcon} />
							</a>
						</li>
					</ul>
				</nav>
			</div>
		</header>
	</body>
</html>
{
	!headerOnly && (
		<div class="align-center flex gap-8 justify-between margin-16">
			<ThemeSelector />
			<AppearenceToggle />
			<PauseAnimationsButton />
		</div>
	)
}
<main class:list={{ "page-margin": !noMargin, main: true }} id="main">
	<slot />
</main>
{
	!headerOnly && (
		<footer class="align-center gap-16 justify-center margin-16 row">
			<span>Â©{new Date().getFullYear()}</span>
		</footer>
	)
}

<style>
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	html {
		font-family: system-ui, sans-serif;
	}

	.height-fit-content {
		block-size: fit-content;
	}

	.header {
		background-color: var(--primary);
		padding: 0.5rem 6%;
		a {
			color: white;
			text-decoration: none;
			svg {
				--icon-fill: white;
			}
		}
	}
	.logo {
		height: 24px;
		width: 24px;
	}

	.main {
		height: 100%;
	}

	.page-margin {
		padding-block: 7%;
		margin-inline: 20%;
	}

	.skip-to-main {
		position: absolute;
		top: -1000%;
		right: -1000%;

		&:focus-within {
			position: inherit;
			height: inherit;
			width: inherit;
			top: inherit;
			right: inherit;
		}
	}
</style>
