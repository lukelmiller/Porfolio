---
import oneIcon from "../assets/icons/1-of-3.svg?raw";
import twoIcon from "../assets/icons/2-of-3.svg?raw";
import threeIcon from "../assets/icons/3-of-3.svg?raw";

type Props = {
	rating: 1 | 2 | 3 | number;
};

const { rating } = Astro.props;
---

{rating === 1 && <Fragment set:html={oneIcon} />}
{rating === 2 && <Fragment set:html={twoIcon} />}
{rating === 3 && <Fragment set:html={threeIcon} />}
